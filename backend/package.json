
{
  "name": "buntudelice-backend",
  "version": "1.0.0",
  "description": "Backend API for Buntudelice application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "pm2 start ecosystem.config.js",
    "lint": "eslint .",
    "test": "jest",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docker:build": "docker build -t buntudelice-api .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:rebuild": "docker-compose down && docker-compose up -d --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:prod:logs": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml logs -f",
    "docker:prod:down": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "docker:init": "mkdir -p db && mkdir -p traefik && mkdir -p logs && mkdir -p uploads",
    "docker:setup": "npm run docker:init && npm run docker:build && npm run docker:up",
    "docker:prod:setup": "npm run docker:init && npm run docker:build && npm run docker:prod"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.3",
    "pm2": "^5.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
